<style>
  .btn {
    text-decoration: none;
    padding: 12px 40px 10px;
    border-radius: 100px;
    line-height: 34px;
    font-weight: 500;
    font-size: 24px;
    transition: .2s;
    display: inline-block;
    text-transform: uppercase;
  }

  .btn.primary {
    background: #0038FF;
    color: #fff;
  }

  .btn.primary:hover {
    background: #0330CC;
  }

  .btn.secondary:hover {
    background: #D3D8DD;
  }

  .btn.secondary {
    background: #fff;
    color: #000;
  }

  /* Mobile */
  @media screen and (max-width: 600px) {
    .btn {
      padding: 20px 24px;
      line-height: 1;
      font-size: 16px;
    }
  }
</style>

<a href="{{ href }}" target="{{ target }}" class="btn {{ btn_class }}">
  {{ btn_text }}
</a>