<style>
  .embla {
    overflow: hidden;
    color: #fff;
  }
  .embla__container {
    display: flex;
  }
  .embla__slide {
    flex: 0 0 100%;
    min-width: 0;
    display: grid;
    grid-template-columns: 1fr auto;
    align-items: center;
  }

  .home__cakeMake {
    position: relative;
  }

  .home__cakeMake_jersey {
    position: relative;
    width: 500px;
  }

  .home__cakeMake_container {
    max-width: 1160px;
    margin: 150px auto;
  }

  .home__cakeMake h3 {
    font-size: 40px;
    line-height: 1;
    text-transform: capitalize;
    margin: 24px 0;
  }

  .home__cakeMake_buttons {
    display: flex;
    gap: 24px;
    margin-top: 72px;
  }

  .home__cakeMake h2 {
    text-transform: capitalize;
  }

  .embla__slide > div:first-child {
    padding-left: 150px;
    position: relative;
  }

  .home__cakeMake_arrow {
    position: absolute;
    top: 40px;
    max-width: 100px;
    left: 0;
  }

  .home__cakeMake_emblaButtons {
    display: flex;
    justify-content: center;
    gap: 16px;
  }

  .embla__slide_textCircle {
    position: absolute;
    top: 0;
    z-index: 1;
  }

  .swiper-pagination {
    max-width: 135px;
    display: flex;
  }

  .swiper-pagination-bullet {
    width: 16px;
    background: #fff;
    opacity: .5;
    transition: .5s;
    border-radius: 10px;
  }

  .swiper-pagination-bullet-active {
    width: 100% !important;
    opacity: 1 !important;
  }

  .cakeMake__circleText {
    position: absolute;
    bottom: 0;
    display: block;
    left: -250px;
    width: 500px;
  }

  @media screen and (max-width: 1024px) {
    .home__cakeMake .swiper {
      width: 100%;
    }

    .home__cakeMake h2 {
      font-size: 48px;
      padding: 0 20px;
    }

    .home__cakeMake .embla__slide {
      display: flex;
      flex-direction: column-reverse;
    }

    .home__cakeMake .swiper-slide {
      width: 100% !important;
      height: auto;
      align-self: stretch;
      box-sizing: border-box;
      padding: 20px;
    }

    .home__cakeMake_container {
      margin: 50px auto;
    }

    .home__cakeMake_jersey {
      width: 100%;
      box-sizing: border-box;
    }

    .home__cakeMake .embla__slide div:first-child {
      padding: 0;
      box-sizing: border-box;
    }

    .home__cakeMake_arrow {
      display: none;
    }

    .swiper-pagination {
      margin-bottom: -30px;
      position: relative;
      z-index: 100;
    }

    .swiper {
      overflow: visible !important;
    }
  }
</style>

