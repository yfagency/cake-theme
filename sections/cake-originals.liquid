<style>
  .home__cakeOriginals {
    padding: 150px 0;
  }

  .home__cakeOriginals_container {
    max-width: 1160px;
    margin: 0 auto;
  }

  .home__cakeOriginals_headingsBox h2 {
    text-transform: capitalize;
  }

  .home__cakeOriginals p {
    margin: 0;
  }

  .home__cakeOriginals_headingsBox h2:nth-child(2) {
    padding-left: 10%;
    white-space: nowrap;
  }

  .home__cakeOriginals_contentBox {
    margin-top: 72px;
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 40px;
  }

  .home__cakeOriginals_contentBox img {
    width: 100%;
    aspect-ratio: 1/1;
    object-fit: cover;
    object-position: top;
  }

  .home__cakeOriginals_contentBox .swiper {
    min-width: auto;
  }

  .home__cakeOriginals video {
    object-fit: cover;
    pointer-events: none;
  }

  .home__cakeOriginals_cta {
    font-size: 24px;
    line-height: 1.5;
    text-transform: uppercase;
  }

  .home__cakeOriginals_cta {
    width: 250px;
    display: block;
    height: 250px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    border-radius: 100%;
    background: #fff;
    color: #000;
    font-weight: 500;
  }

  .home__cakeOriginals_cta img {
    width: 20px;
    margin-left: 8px;
  }

  .home__cakeOriginals_right {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  @media screen and (max-width: 1024px) {
    .home__cakeOriginals {
      padding: 50px 0;
    }

    .home__cakeOriginals h2 {
      font-size: 40px;
    }

    .home__cakeOriginals .swiper {
      width: 100%;
    }

    .home__cakeOriginals .swiper-slide {
      height: auto;
      align-self: stretch;
    }

    .home__cakeOriginals_contentBox img {
      aspect-ratio: auto;
      height: 100%;
    }

    .home__cakeOriginals_headingsBox {
      padding: 0 20px;
    }

    .home__cakeOriginals h2 {
      padding-left: 0 !important;
      font-size: 48px;
      margin: 0;
      line-height: 1.25;
    }
  }
</style>

