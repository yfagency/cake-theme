<style>
  .header {
    position: fixed;
    width: 100%;
    padding: 16px 0;
    z-index: 9999;
    background: transparent;
    transition: .3s;
  }

  .header__container {
    max-width: 1160px;
    display: flex;
    margin: 0 auto;
    align-items: center;
    justify-content: space-between;
    text-align: center;
  }

  .header_links {
    display: flex;
    justify-content: end;
    gap: 8px;
    font-weight: 500;
    text-transform: capitalize;
  }

  .header_links a:first-child {
    color: rgba(255, 255, 255, 0.40);
    letter-spacing: 0.6px;
  }

  .header__container img {
    max-width: 72px;
    transition: .3s;
  }

  .header {
    text-transform: capitalize;
    background: rgba(29, 28, 28, 0.40);
    backdrop-filter: blur(12px);
  }

  .headerScrolled {
    transition: .3s;
  }

  .headerScrolled img {
    max-width: 48px;
    transition: .3s;
  }

  .header nav a {
    color: inherit;
    text-decoration: none;
    color: #FFF;
    font-size: 18px;
    font-style: normal;
    font-weight: 500;
    line-height: 1;
    text-transform: capitalize;
  }

  .header__highlightedLink {
    border: 1px solid white;
    padding: 5px 20px;
    border-radius: 100px;
    font-weight: 500;
    transition: .2s linear;
  }

  .header__highlightedLink:hover {
    background: #fff;
    color: #000 !important;
    transition: .2s linear;
  }

  .header__nav ul {
    display: flex;
    gap: 40px;
    list-style: none;
    text-wrap: nowrap;
    align-items: center;
    padding: 0;
  }

  .header__navCta {
    font-style: normal;
    font-weight: 700;
    display: inline-flex;
    font-size: 20px;
    padding: 10px 20px;
    justify-content: center;
    align-items: center;
    gap: 10px;
    border-radius: 100px;
    border: 1px solid #FFF;
  }

  /* MEDIA QUERIES */

  @media screen and (max-width: 1024px) {
    .header {
      display: none;
    }
  }
</style>
<header id="header" class="header">
  <div class="header__container">
    <a href="{{ routes.root_url }}"><img src="https://cdn.shopify.com/s/files/1/0751/1490/5880/files/cake_logo.svg" /></a>
    
    <nav class="header__nav">
      {% assign menu = linklists['main-menu'] %}

      <ul>
        {% for item in menu.links %}
          <li>
            <a href="{{ item.url }}">{{ item.title }}</a>
            {% if item.links.size > 0 %}
              <ul>
                {% for sub_item in item.links %}
                  <li>
                    <a href="{{ sub_item.url }}">{{ sub_item.title }}</a>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    </nav>

    <a class="header__navCta">Make Jersey</a>

    <div class="header_links">
      <a>EN</a>
      <a>JP</a>
    </div>
  </div>
</header>

<script>
  window.addEventListener('scroll', () => {
    if (window.scrollY >= 104) {
      document.getElementById("header").classList.add("headerScrolled");
    } else {
      document.getElementById("header").classList.remove("headerScrolled");
    }
  });
</script>