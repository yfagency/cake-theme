<style>
  /* GLOBAL */
  .container {
    max-width: 1160px;
    margin: 0 auto;
  }

  /* HERO */
  .hero {
    margin-top: 104px;
    padding: 150px 0;
    position: relative;
    text-align: center;
  }

  .hero__line {
    position: absolute;
    top: 10%;
    right: 0;
    z-index: -1;
  }

  .hero__title {
    text-align: center;
    font-size: 70px;
    font-style: normal;
    font-weight: 800;
    line-height: normal;
    text-transform: capitalize;
  }

  .hero__text {
    text-align: center;
    font-size: 20px;
    font-style: normal;
    font-weight: 500;
    line-height: 30px; /* 150% */
    width: 70%;
    margin: 0 auto 50px;
  }

  /* GUIDELINES */
  .guidelines {
    padding: 150px 0;
  }

  .guidelines__itemTitle {
    font-size: 45px;
    font-style: normal;
    font-weight: 800;
    line-height: normal;
    text-transform: capitalize;
  }

  .guidelines__itemText {
    font-size: 20px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    max-width: 60%;
  }

  /* ACCORDION */
  .accordion {
    width: 100%;
    margin: 0 auto;
    overflow: hidden;
  }

  .accordion-item {
    border-bottom: 1px solid #ccc;
  }

  .accordion-item:last-child {
      border-bottom: none;
  }

  .accordion-header {
    width: 100%;
    padding: 0;
    text-align: right;
    border: none;
    outline: none;
    cursor: pointer;
    font-size: 16px;
    background: none;
    color: #fff;
  }

  .accordion-content {
      padding: 0;
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.2s ease-out;
  }

  .accordion-content p {
      margin: 15px 0;
  }

  .accordionContent__title {
    font-size: 34px;
    font-style: normal;
    font-weight: 800;
    line-height: normal;
    text-transform: capitalize;
  }

  .accordionContent__text {
    max-width: 60%;
    font-size: 20px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
  }
</style>

{% section 'header' %}

